

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div id='main-content'>
          <div class='container'>
            <div class='row'>
              <div class='col-sm-12'>
                <div class='page-header page-header-with-icon no-mg-t'>
                  <i class='fa fa-code-fork'></i>
                  <h2>
                    Create User Account
                  </h2>
                </div>

                <div class='row'>
                  <div class='col-sm-12'>
                      <fieldset class='row'>
                        <div class='col-sm-4 mg-b-md'>
                          <div class='lead'>Sign Up</div>
                          <small class='text-muted'>Registration is easy, just fill out this info and all done.</small>
                        </div>
                        <div class='col-sm-7 col-sm-offset-1'>
                          <div class='form-group'>
                            <label>Username</label>
                              <%= f.text_field :username, autofocus: true, class: "form-control" %>
                          </div>
                          <div class='form-group'>
                            <label>Email</label>
                              <%= f.email_field :email, class: "form-control" %>
                          </div>
                          <div class='form-group'>
                            <label>Password</label>
                              <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> characters minimum)</em>
                               <% end %><br />
                              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                          </div>
                          <div class='form-group'>
                            <label>Password Confirmation</label>
                             <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                          </div>
                          <div class="actions">
                        <%= f.submit "Sign up", class: 'btn btn-contrast btn-lg' %>
                         </div>
                         or click here to 
<%= render "devise/shared/links" %>
                          
                      </div>
                    </div>


                    </div>
                          </div>



                        </div>
                      </fieldset>
                      </div>
                      </div>




<% end %>


