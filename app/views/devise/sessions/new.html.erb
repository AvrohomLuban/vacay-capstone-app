
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>



<div id='main-content'>
          <div class='container'>
            <div class='row'>
              <div class='col-sm-12'>
                <div class='page-header page-header-with-icon no-mg-t'>
                  <i class='fa fa-code-fork'></i>
                  <h2 >
                    Log In
                  </h2>
                </div>

                <div class='row'>
                  <div class='col-sm-12'>
                      <fieldset class='row'>
                        <div class='col-sm-4 mg-b-md'>
                          <div class='lead'>Log In</div>
                          <small class='text-muted'>You already have account so just log in</small>
                        </div>
                        <div class='col-sm-7 col-sm-offset-1'>
                          <div class='form-group'>
                            <label>Email</label>
                              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                          </div>
                          <div class='form-group'>
                            <label>Password</label>
                              <%= f.password_field :password, autocomplete: "off", class: 'form-control'%>
                          </div>
                          <% if devise_mapping.rememberable? -%>
                            <div class="field">
                            <%= f.check_box :remember_me %>
                             <%= f.label :remember_me %>
                            </div>
                          <% end -%>

                          <div class="actions">
                        <%= f.submit "Log In", class: 'btn btn-contrast btn-lg' %>
                         </div>
                          or click here to
                          <%= render "devise/shared/links" %>

                          
                      </div>
                    </div>


                    </div>
                          </div>



                        </div>
                      </fieldset>
                      </div>
                      </div>




<% end %>
















