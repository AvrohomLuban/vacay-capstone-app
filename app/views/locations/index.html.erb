      <div id='main' role='main'>
        <div id='main-content-header'>
          <div class='container'>
            <div class='row'>
              <div class='col-sm-12'>
                <h1 class='title'>
                  Search Our Database
                  <small>Perfect vacation is awaiting!</small>
                </h1>
              </div>
            </div>
          </div>
        </div>
        <div id='main-content'>
          <div class='container'>
            <div class='row' id='portfolio-filter'>
              <div class='col-sm-12'>
                <ul class='nav nav-pills'>
                  <li class='active'><a data-filter="*" href="#">By Name</a></li>
                  <li><a data-filter=".portfolio-filter-photography" href="#">Most Viewed</a></li>
                  <li><a data-filter=".portfolio-filter-identity" href="#">Most Visted</a></li>
                  <li><a data-filter=".portfolio-filter-webdesign" href="#">Best Rated</a></li>
                  <li><a data-filter=".portfolio-filter-marketing" href="#">Random</a></li>
                </ul>
              </div>
            </div>
            <div class='row portfolio-boxes' id='portfolio-container'>

    <% @locations.uniq.each do |location| %>
              <div class='col-sm-3 portfolio-box portfolio-filter-photography portfolio-item'>
                <a href='portfolio_detail.html'>
                  <div class='image-link'>
                    <i class='fa fa-search'></i>
                    <img class="img-responsive img-rounded center-block" alt="Etiam vestibulum" width="263" height="171" src="https://media-cdn.tripadvisor.com/media/photo-s/0e/9a/e3/1d/freedom-tower.jpg" />
                  </div>
                  <h3 class = "title"><a href = "/locations/?<%= @city_state_country %>=<%= location %>"><%= location %></a></h3>
                  <p class='category'><%= Location.where(country: location).count %> Reports</p>
                </a>
              </div>
    <% end %>
            </div>
          </div>
        </div>
        <div class='fade' id='scroll-to-top'>
          <i class='fa fa-chevron-up'></i>
        </div>
      </div>