        <% if @reports.length < 1 %>
        <p>There are no reports that match your search. Try searching for something else.</p>
        <% end %>
        <% @reports.each do |report| %>

                  <div class='row text-box text-box-title-above'>
                    <div class='col-sm-12'>
                      <% if params[:searchbox] %>
                        <h2 class='title'><a href="/reports/<%= report.id %>/?searchbox=<%= params[:searchbox] %>">
                        <%= report.title.gsub(params[:searchbox], "<span class='highlight'>#{params[:searchbox]}</span>").gsub(params[:searchbox].titleize, "<span class='highlight'>#{params[:searchbox].titleize}</span>").html_safe %></a></h2>
                      <% else %>
                        <h2 class='title'><a href="/reports/<%= report.id %>"><%= report.title %></a></h2>
                      <% end %>

                      <div class='toolbar'>
                      <a class='btn btn-link'>
                          <i class='fa fa-map'></i>
                          <% if params[:searchbox] %>
                          <span><%= report.locations.first.city.gsub(params[:searchbox], "<span class='highlight'>#{params[:searchbox]}</span>").gsub(params[:searchbox].titleize, "<span class='highlight'>#{params[:searchbox].titleize}</span>").html_safe %>, <%= report.locations.first.state.gsub(params[:searchbox], "<span class='highlight'>#{params[:searchbox]}</span>").gsub(params[:searchbox].titleize, "<span class='highlight'>#{params[:searchbox].titleize}</span>").html_safe %>, <%= report.locations.first.country.gsub(params[:searchbox], "<span class='highlight'>#{params[:searchbox]}</span>").gsub(params[:searchbox].titleize, "<span class='highlight'>#{params[:searchbox].titleize}</span>").html_safe %></span>
                          <% else %>
                            <span><%= report.locations.first.city %>, <%= report.locations.first.state %>, <%= report.locations.first.country %></span>
                          <% end %>
                        </a>
                        <a class='btn btn-link'>
                          <i class='fa fa-clock-o'></i>
                          <span><%= report.duration %></span>
                        </a>
                        <a class='btn btn-link'>
                          <i class='fa fa-calendar'></i>
                          <span><%= report.season %></span>
                        </a>
                        <a class='btn btn-link'>
                          <i class='fa fa-user'></i>
                          <span><%= report.user.username %></span>
                        </a>
                      </div>
                      <div class='row'>
                        <div class='col-sm-3'>
                            <img class="img-responsive center-block img-rounded-half" alt="Cras tempus ligula a tempor adipiscing" width="189" height="129" src="<%= report.photos.first_image %>" />
                        </div>
                        <div class='col-sm-9'>
                          <% if params[:searchbox] %>
                          <p><%= simple_format(report.text.first(400).gsub(params[:searchbox], "<span class='highlight'>#{params[:searchbox]}</span>").gsub(params[:searchbox].capitalize, "<span class='highlight'>#{params[:searchbox].capitalize}</span>")) %> ...</p>
                          <a class='btn btn-contrast btn-bordered btn-xs' href='/reports/<%= report.id %>/?searchbox=<%= params[:searchbox] %>'>Read more</a>
                          <% else %>
                          <p><%= simple_format(report.text.first(400)) %> ...</p>
                            <a class='btn btn-contrast btn-bordered btn-xs' href='/reports/<%= report.id %>'>Read more</a>
                          <% end %>
                        </div>
                      </div>
