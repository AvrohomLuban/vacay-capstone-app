                <div class='row' id='portfolio-filter'>
              <div class='col-sm-12'>
                <ul class='nav nav-pills'>
                  <li class=<%= 'active' unless params[:abc] || params[:rating] || params[:random] %>><a href="/reports/indexcity/?country=<%= @country %>&state=<%= @state %>&city=<%= @city %>">Latest</a></li>
