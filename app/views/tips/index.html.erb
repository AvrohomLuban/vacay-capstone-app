<h1>All Tips</h1>
<% @tips.each do | tip | %>
<div class = "well">
<div class = "row">
<div class = "col-md-2">
<%= tip.user.username %><br>
<%= tip.user.status %><br>
<%= tip.user.posts %>
</div>
<div class = "col-md-9">
<strong><%= tip.location.city %>: </strong>
<i><%= tip.venue %></i><br>
<%= tip.text %>
</div>
<div class = "col-md-1">
<%= button_to "Like", "/likes/#{tip.id}/?tip?like=true", method: :post %>
</div>
</div>
</div>
<% end %>
